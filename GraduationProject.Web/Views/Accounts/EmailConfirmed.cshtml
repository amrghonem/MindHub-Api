@using GraduationProject.Data
@model ApplicationUser

<html ng-app="emailConf">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="images/favicon.png" type="image/x-icon" />
    <link rel="stylesheet" href="~/scss/bootstrap.min.css">
    <link rel="stylesheet" href="~/scss/font-awesome.min.css">
    <style>
        header.navLogo {
            width: 100%;
        }

            header.navLogo .layer {
                width: 100%;
                height: 60px;
                padding: 5px 0 5px 0;
                opacity: 0.9;
                background-color: #595959;
                position: relative;
            }

            header.navLogo img {
                top: 4px;
                position: absolute;
            }



        .container {
            font-family: 'Helvetica Neue', Helvetica;
            text-align: center;
            padding: 5px;
        }

            .container .text-container {
                width: 90%;
                max-width: 800px;
                font-weight: 300;
                margin: 0 auto;
                padding: 15px;
                padding-bottom: 15px;
                margin-top: 100px;
            }

                .container .text-container h1 {
                    font-weight: 100;
                    color: #bd82f0;
                }

            .container a {
                text-decoration: none;
                color: none;
            }

            .container .text-container a.button {
                padding: 15px;
                font-family: 'Helvetica Neue', Helvetica;
                text-size: 18px;
                color: white;
                background-color: #8ccb75;
                border: 0;
                border-radius: 5px;
                margin: 10px;
                display: block;
                max-width: 200px;
                margin: auto;
                text-decoration: none;
            }

            .container .text-container p {
                line-height: 1.5;
            }
    </style>

</head>
<body>
    <header class="navLogo">
        <div class="layer"></div>
        <img src="~/images/logo.png">
    </header>
    <div>
        <div class="container" id="mobile">
            <div class="text-container">
                <h1><i class="fa fa-check-circle" aria-hidden="true" \></i> Email verified</h1>
                <p>Your email is verified for Lomotif username <a href="#" style="font-weight: bold;">@Model.UserName</a>. </p>
                <p>Redirecting you to Lomotif app in <span id="count">5</span>.</p>
                <a href="#" class="button">Go to app now</a>
            </div>
        </div>
    </div>
</body>
</html> 